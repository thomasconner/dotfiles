{
  // VS Code
  "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
  // "editor.fontFamily": "FiraCode-Retina, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.external.osxExec": "iTerm.app",
  "workbench.view.alwaysShowHeaderActions": true,
  "[javascript]": {
    "editor.fontLigatures": "'ss02'",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Files
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.hg": true,
    "**/.svn": true,
    // "**/*.css": {
    //   "when": "$(basename).scss"
    // },
    // "**/*.js": {
    //     "when": "$(basename).ts"
    // },
    "**/CVS": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // Git
  "git.autofetch": true,
  // Eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Prettier
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Sync
  "sync.quietSync": true,
  "sync.autoUpload": true,
  "oneDarkPro.editorTheme": "VS Code",
  "editor.matchBrackets": "never",
  "sync.gist": "c002a3d7444a3916f808c88bd035f44e",
  "explorer.confirmDelete": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "css.validate": false,
  "workbench.sideBar.location": "left",
  "terminal.integrated.cursorStyle": "line",
  "liveshare.authenticationProvider": "GitHub",
  "git.confirmSync": false,
  "workbench.iconTheme": "vscode-icons",
  "editor.accessibilitySupport": "off",
  "vsicons.dontShowNewVersionMessage": true,
  "githubPullRequests.fileListLayout": "tree",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.bracketPairColorization.enabled": true,
  "redhat.telemetry.enabled": true,
  "files.associations": {
    "en-US.json": "jsonc"
  },
  "workbench.startupEditor": "none",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "playwright.reuseBrowser": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "search.followSymlinks": false,
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
    "docker-desktop"
  ],
  "workbench.colorTheme": "One Dark Pro Darker",
  "remote.autoForwardPortsSource": "hybrid",
  "github.copilot.nextEditSuggestions.enabled": true,
  "editor.formatOnSave": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "azureTerraform.survey": {
    "surveyPromptDate": "2025-08-28T13:01:33.053Z",
    "surveyPromptIgnoredCount": 0
  }
}
