{
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": "off"
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.codeLens": true,
  "dotfiles.installCommand": "containers.sh",
  "dotfiles.repository": "https://github.com/thomasconner/dotfiles.git",
  "dotfiles.targetPath": "~/dotfiles",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.minimap.scale": 3,
  "editor.minimap.sectionHeaderFontSize": 10,
  "editor.stickyScroll.enabled": true,
  "editor.suggest.showWords": false,
  "editor.tabSize": 2,
  "explorer.confirmDelete": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.ts": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "package.json": "package-lock.json, yarn.lock",
    "tsconfig.json": "tsconfig.*.json"
  },
  "files.associations": {
    "*.hcl": "terraform",
    "en-US.json": "jsonc"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "github.copilot.enable": {
    "*": true,
    "editor": true,
    "editorInlineSuggestion": true,
    "editorInlineSuggestion.showWhenNoSuggestions": true,
    "editorInlineSuggestion.showWhenTyping": true,
    "markdown": true,
    "plaintext": false,
    "scminput": false
  },
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",
  "go.lintFlags": ["--fast"],
  "go.lintTool": "golangci-lint",
  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,
  "liveshare.authenticationProvider": "GitHub",
  "oneDarkPro.editorTheme": "VS Code",
  "redhat.telemetry.enabled": false,
  "remote.autoForwardPortsSource": "hybrid",
  "search.followSymlinks": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.shellIntegration.enabled": true,
  "window.autoDetectColorScheme": true,
  "window.restoreWindows": "none",
  "window.title": "${rootName}${separator}${activeFolderMedium}/${activeEditorShort}",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.editor.enablePreview": true,
  "workbench.editor.untitled.labelFormat": "name",
  "workbench.iconTheme": "vscode-icons",
  "workbench.layoutControl.enabled": true,
  "workbench.preferredDarkColorTheme": "One Dark Pro Darker",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.view.alwaysShowHeaderActions": true
}
